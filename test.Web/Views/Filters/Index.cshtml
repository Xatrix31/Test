@using test.Models.ViewModels
@model test.Web.Models.FilterViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All pupils</h2>
<div>
    <div>
        <div>
            <label>Gender:</label> @Html.DropDownList("gender", Model.Genders)
        </div>
        <div>
            <label>Class:</label> @Html.DropDownList("className", Model.SchoolClasses)
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Gender</th>
            <th>ClassName</th>
        </tr>
        @foreach (PupilViewModel item in Model.Pupils)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Gender</td>
                <td>@item.SchoolClassName</td>
            </tr>
        }
    </table>
</div>