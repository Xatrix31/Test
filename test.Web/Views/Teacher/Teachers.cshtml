@using test.Models.ViewModels
@model IEnumerable<TeacherViewModel>

<table class="table table-striped table-bordered">
    <caption>Teachers</caption>
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TeacherViewModel item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@Html.ActionLink("Remove", "RemoveTeacherFromClass", "Teacher", new { id = item.IdClass, idTeacher = item.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>