@using test.Models.ViewModels
@model  IEnumerable<PupilViewModel>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <td>Name</td>
            <td>Surname</td>
            <td>Gender</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (PupilViewModel item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Gender</td>
                <td>@Html.ActionLink("Edit", "EditPupil", "Pupil", new { id = item.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>