@using test.Models.ViewModels
@model  IEnumerable<PupilViewModel>
<style type="text/css">
    caption {
        display: table-caption;
        text-align: center;
    }
</style>
<table class="table table-striped table-bordered">
    <caption>Pupils</caption>
    <thead class="thead-dark">
        <tr>
            <td>Name</td>
            <td>Surname</td>
            <td>Gender</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (PupilViewModel item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Gender</td>
                <td>@Html.ActionLink("Edit", "EditPupil", "Pupil", new { id = item.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>